@model WebUI.AuthApp.UserRegistration

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>

            <form asp-action="Register" asp-antiforgery="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="LoginProp">Логин</label>
                    <input asp-for="LoginProp" class="form-control" placeholder="Введите логин" id="LoginProp" />
                    <span asp-validation-for="LoginProp" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control" placeholder="Введите пароль" id="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">Пароль должен содержать минимум 8 символов, включая цифры и специальные символы.</small>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Продублируйте пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" id="ConfirmPassword" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Role">Роль</label>
                    <select asp-for="Role" class="form-control" id="Role">
                        <option value="User">Обычный пользователь</option>
                        <option value="Admin">Администратор</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-lg btn-primary">Зарегистрироваться</button>
                </div>

                <div class="text-center">
                    <p>Уже есть аккаунт? <a href="/Account/Login">Войти</a></p>
                </div>
            </form>

        </div>
    </div>
</div>
