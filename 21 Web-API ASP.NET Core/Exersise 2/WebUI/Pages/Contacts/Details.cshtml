@using Models
@model PhoneContact

@{
    ViewBag.Title = "Details";
}

<h2>Контакт</h2>

<div>
    <p><strong>Name:</strong>         @Model.Name</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    <p><strong>Address:</strong>      @Model.Address</p>
    <p><strong>Descriptions:</strong> @Model.Descriptions</p>
</div>

@{
    if (User.IsInRole("Admin"))
    {
        <h3>Редактировать контакт</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">PhoneNumber</label>
                <input type="text" asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address" class="form-control" value="@Model.Address" />
            </div>
            <div class="form-group">
                <label asp-for="Descriptions">Descriptions</label>
                <input type="text" asp-for="Descriptions" class="form-control" value="@Model.Descriptions" />
            </div>
            <p><input type="submit" value="Сохранить" class="btn btn-primary" /></p>
        </form>
    }
    else
    {
        <p>Вы не имеете прав для редактирования этой записи.</p>
    }
}
