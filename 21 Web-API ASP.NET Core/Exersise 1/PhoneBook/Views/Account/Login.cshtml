@model PhoneBook.AuthApp.UserLogin
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

            <form asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label for="LoginProp">Логин</label>
                    <input asp-for="LoginProp" class="form-control" placeholder="Введите логин" id="LoginProp" />
                    <span asp-validation-for="LoginProp" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control" placeholder="Введите пароль" id="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>

                <div class="text-center">
                    <p><a href="/Account/Register">Зарегистрироваться</a> | <a href="/Account/ForgotPassword">Забыли пароль?</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
