@model PhoneContact
@{
    ViewBag.Title = "Edit PhoneContact";
}

<h2>Edit Phone Contact</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" name="Address" class="form-control" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label asp-for="Descriptions">Descriptions</label>
        <input type="text" name="Descriptions" class="form-control" value="@Model.Descriptions" />
    </div>
    <p><input type="submit" value="Сохранить" class="btn btn-primary" /></p>
</form>
